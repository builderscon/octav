    "tag": {
      "type": "string"
    },
    "tag_array": {
      "type": "array",
      "items": { "$ref": "#/definitions/tag" }
    },
    "speaker": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/uuid" },
        "name": { "type": "string" },
        "email": { "$ref": "#/definitions/email" }
      },
      "additionalProperties": {
        "patternProperties": {
          "^[a-z0-9-]+-profile": { "type": "object" }
        }
      }
    },
    "speaker_array": {
      "type": "array",
      "items": { "$ref": "#/definitions/speaker" }
    },
    "acceptance_status": {
      "type": "string",
      "enum": [ "pending", "accepted", "rejected" ],
      "default": "pending"
    },
    "duration": {
      "type": "integer"
    },
    "session_array": {
      "type": "array",
      "hsup.type": "[]model.Session",
      "items": { "$ref": "#/definitions/session" }
    },
    "session": {
      "type": "object",
      "hsup.type": "model.Session",
      "properties": {
        "conference": {
          "oneOf": [
            { "type": "null" },
            { "$ref": "#/definitions/conference" }
          ]
        },
        "room": {
          "oneOf": [
            { "type": "null" },
            { "$ref": "#/definitions/room" }
          ]
        },
        "speaker": {
          "oneOf": [
            { "type": "null" },
            { "type": "object" },
            { "$ref": "#/definitions/speaker_array" }
          ]
        },
        "title": { "type": "string" },
        "abstract": { "type": "string" },
        "memo": { "type": "string" },
        "starts_on": { "$ref": "#/definitions/datetime" },
        "duration": { "$ref": "#/definitions/duration" },
        "material_level": { "$ref": "#/definitions/material_level" },
        "tags": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/definitions/tag_array" }
          ]
