{
  "definitions": {
    "datetime": {
      "type": "string"
    },
    "string-en": {
      "description": "a string in English.",
      "type": "string"
    },
    "markdown-en": {
      "description": "a string with markdown markup in English.",
      "type": "string"
    },
    "string-i18n": {
      "description": "a string for a particular language, where language is presented as the suffix of the property in the form of <foo>#<language>.",
      "type": "string"
    },
    "markdown-i18n": {
      "description": "a string with markdown markup for a particular language, where language is presented as the suffix of the property in the form of <foo>#<language>.",
      "type": "string"
    },
    "positiveInteger": {
      "type": "integer",
      "minimum": 0
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "material-level": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced"]
    },
    "binary-permission": {
      "type": "string",
      "enum": ["allow","disallow"]
    },
    "url": {
      "type": "string",
      "format": "url"
    },
    "uuid": {
      "description": "an UUID, expressed as hexadecimal chars",
      "type": "string",
      "pattern": "^[a-fA-F0-9-]+$"
    },
    "uuidDefaultEmpty": {
      "description": "an UUID, expressed as hexadecimal chars, but if not provided, the empty string is returned",
      "type": "string",
      "pattern": "^[a-fA-F0-9-]+$",
      "default": ""
    },
    "language": {
      "description": "a language tag",
      "type": "string",
      "default": "en"
    },
    "latitude": {
      "description": "latitude of an object",
      "type": "number"
    },
    "longitude": {
      "description": "latitude of an object",
      "type": "number"
    },
    "date": {
      "hsup.type": "octav.Date",
      "type": "object",
      "property": {
        "date": { "$ref": "#/definitions/date-string" },
        "open": { "$ref": "#/definitions/time" },
        "close": { "$ref": "#/definitions/time" }
      }
    },
    "date-string": {
      "type": "string",
      "pattern": "^\\d+-\\d+-\\d+$"
    },
    "date-array": {
      "type": "array",
      "items": { "$ref": "#/definitions/date" }
    },
    "conference": {
      "type": "object",
      "hsup.type": "octav.Conference",
      "properties": {
        "id": { "$ref": "#/definitions/uuid" },
        "name": { "$ref": "#/definitions/string-en" },
        "slug": { "$ref": "#/definitions/string-en" },
        "description": { "$ref": "#/definitions/string-en" },
        "venue": { "$ref": "#/definitions/venue" },
        "dates": { "$ref": "#/definitions/date-array" }
      },
      "patternProperties": {
        "title#{a-z}+": { "$ref": "#/definitions/string-i18n" },
        "description#{a-z}+": { "$ref": "#/definitions/string-i18n" }
      }
    },
    "venue": {
      "type": "object",
      "hsup.type": "octav.Venue",
      "properties": {
        "id": { "$ref": "#/definitions/uuid" },
        "name": { "type": "string" },
        "rooms": { "$ref": "#/definitions/room" }
      }
    },
    "room": {
      "type": "object",
      "hsup.type": "octav.Room",
      "properties": {
        "id": { "$ref": "#/definitions/uuid" },
        "venue_id": { "$ref": "#/definitions/uuid" },
        "name": { "type": "string" },
        "capcity": { "$ref": "#/definitions/positiveInteger" }
      }
    },
    "tag": {
      "type": "string"
    },
    "tag-array": {
      "type": "array",
      "items": { "$ref": "#/definitions/tag" }
    },
    "speaker": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/uuid" },
        "name": { "type": "string" },
        "email": { "$ref": "#/definitions/email" }
      },
      "additionalProperties": {
        "patternProperties": {
          "^[a-z0-9-]+-profile": { "type": "object" }
        }
      }
    },
    "speaker-array": {
      "type": "array",
      "items": { "$ref": "#/definitions/speaker" }
    },
    "acceptance-status": {
      "type": "string",
      "enum": [ "pending", "accepted", "rejected" ],
      "default": "pending"
    },
    "duration": {
      "type": "string"
    },
    "session-array": {
      "type": "array",
      "items": { "$ref": "#/definitions/session" }
    },
    "session": {
      "type": "object",
      "hsup.type": "octav.Session",
      "properties": {
        "conference": { "$ref": "#/definitions/conference" },
        "room": { "$ref": "#/definitions/room" },
        "speaker": { "$ref": "#/definitions/speaker-array" },
        "title": { "type": "string" },
        "abstract": { "type": "string" },
        "memo": { "type": "string" },
        "starts-on": { "$ref": "#/definitions/datetime" },
        "duration": { "$ref": "#/definitions/duration" },
        "material-level": { "$ref": "#/definitions/material-level" },
        "tags": { "$ref": "#/definitions/tag-array" },
        "category": { "type": "string" },
        "spoken-language": { "$ref": "#/definitions/language" },
        "slide-language": { "$ref": "#/definitions/language" },
        "slide-subtitles": { "$ref": "#/definitions/language" },
        "slide-url": { "$ref": "#/definitions/url" },
        "video-url": { "$ref": "#/definitions/url" },
        "photo-permission": { "$ref": "#/definitions/binary-permission" },
        "video-permission": { "$ref": "#/definitions/binary-permission" },
        "has-interpretation": {
          "type": "boolean",
          "default": false
        },
        "status": { "$ref": "#/definitions/acceptance-status" },
        "sort-order": { "$ref": "#/definitions/positiveInteger" },
        "confirmed": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "tshirt_size": {
      "type": "string",
      "enum": ["XXXL","XXL","XL","L","M","S","XS"]
    },
    "user": {
      "type": "object",
      "hsup.type": "octav.User",
      "properties": {
        "first_name": { "$ref": "#/definitions/string-en" },
        "last_name": { "$ref": "#/definitions/string-en" },
        "nickname": { "$ref": "#/definitions/string-en" },
        "email": { "$ref": "#/definitions/email" },
        "tshirt_size": { "$ref": "#/definitions/tshirt_size" }
      }
    }
  },
  "pathStart": "/v1",
  "links": [
    {
      "title": "Create user",
      "description": "A user can be a staff/organizer, speaker, or a regular attendee. Information should be obtained from facebook/twitter/github",
      "rel": "create",
      "href": "/user/create",
      "method": "POST",
      "encType": "application/x-www-form-urlencoded",
      "schema": {
        "properties": {
          "first_name": { "$ref": "#/definitions/string-en" },
          "last_name": { "$ref": "#/definitions/string-en" },
          "nickname": { "$ref": "#/definitions/string-en" },
          "email": { "$ref": "#/definitions/email" },
          "tshirt_size": { "$ref": "#/definitions/tshirt_size" }
        },
        "propertyPattern": {
          "first_name#{a-z}+": { "$ref": "#/definitions/string-i18n" }
        }
      },
      "targetSchema": { "$ref": "#/definitions/user" }
    },
    {
      "title": "Create venue",
      "description": "venue describes the establishment in which the conference takes place. a venue contains multiple rooms",
      "rel": "create",
      "href": "/venue/create",
      "method": "POST",
      "encType": "application/x-www-form-urlencoded",
      "schema": {
        "hsup.type": "octav.Venue",
        "properties": {
          "name": { "$ref": "#/definitions/string-en" },
          "address": { "$ref": "#/definitions/string-en" },
          "latitude": { "$ref": "#/definitions/latitude" },
          "longitude": { "$ref": "#/definitions/longitude" }
        },
        "required": ["name", "address"],
        "propertyPattern": {
          "name#{a-z}+": { "$ref": "#/definitions/string-i18n" },
          "address#{a-z}+": { "$ref": "#/definitions/string-i18n" }
        }
      },
      "targetSchema": { "$ref": "#/definitions/venue" }
    },
    {
      "title": "List venues",
      "rel": "list",
      "href": "/venue/list",
      "schema": {
        "type": "object",
        "properties": {
          "lang": { "$ref": "#/definitions/language" },
          "since": { "$ref": "#/definitions/uuidDefaultEmpty" }
        }
      },
      "targetSchema": {
        "hsup.type": "[]octav.Venue",
        "items": { "$ref": "#/definitions/venue" }
      }
    },
    {
      "title": "Lookup venue",
      "rel": "lookup",
      "href": "/venue/lookup",
      "schema": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": { "$ref": "#/definitions/uuid" }
        }
      },
      "targetSchema": { "$ref": "#/definitions/venue" }
    },
    {
      "title": "Delete venue",
      "rel": "delete",
      "href": "/venue/delete",
      "method": "POST",
      "encType": "application/x-www-form-urlencoded",
      "schema": {
        "type": "object",
        "properties": {
          "id": { "$ref": "#/definitions/uuid" }
        }
      }
    },
    {
      "title": "Create room",
      "rel": "create",
      "href": "/room/create",
      "method": "POST",
      "encType": "application/x-www-form-urlencoded",
      "schema": {
        "type": "object",
        "hsup.type": "octav.Room",
        "properties": {
          "venue_id": {
            "$ref": "#/definitions/uuid",
            "description": "venue id that this room belongs to"
          },
          "name": {
            "type": "string",
            "description": "room name in English"
          },
          "capacity": { "$ref": "#/definitions/positiveInteger" }
        },
        "required": ["venue_id", "name"],
        "propertyPattern": {
          "name#{a-z}+": { "$ref": "name-i18n" }
        }
      },
      "targetSchema": { "$ref": "#/definitions/room" }
    },
    {
      "title": "List rooms",
      "rel": "list",
      "href": "/room/list",
      "method": "GET",
      "encType": "application/x-www-form-urlencoded",
      "schema": {
        "properties": {
          "venue_id": { "$ref": "#/definitions/uuid" },
          "lang": { "$ref": "#/definitions/language" }
        },
        "required": [ "venue_id" ]
      },
      "targetSchema": {
        "hsup.type": "[]octav.Room",
        "items": { "$ref": "#/definitions/room" }
      }
    },
    {
      "title": "Create conference",
      "rel": "create",
      "method": "POST",
      "href": "/conference/create",
      "encType": "application/x-www-form-urlencoded",
      "schema": {
        "hsup.type": "octav.Conference",
        "properties": {
          "venue_id": { "$ref": "#/definitions/uuid" },
          "title": { "$ref": "#/definitions/string-en" },
          "subtitle": { "$ref": "#/definitions/string-en" },
          "description": { "$ref": "#/definitions/string-en" },
          "starts-on": { "$ref": "#/definitions/datetime" }
        },
        "patternProperties": {
          "title#{a-z}+": { "$ref": "#/definitions/string-i18n" },
          "description#{a-z}+": { "$ref": "#/definitions/string-i18n" }
        },
        "required": ["title", "slug"]
      },
      "targetSchema": { "$ref": "#/definitions/conference" }
    },
    {
      "title": "Create session",
      "rel": "create",
      "method": "POST",
      "href": "/session/create",
      "schema": {
        "properties": {
          "conference-id": { "$ref": "#/definitions/uuid" },
          "room-id": { "$ref": "#/definitions/uuid" },
          "speaker-id": {
            "type": "array",
            "items": { "$ref": "#/definitions/uuid" }
          },
          "title": { "$ref": "#/definitions/string-en" },
          "abstract": { "$ref": "#/definitions/markdown-en" },
          "memo": { "type": "string" },
          "starts-on": { "$ref": "#/definitions/datetime" },
          "duration": { "$ref": "#/definitions/duration" },
          "material-level": { "$ref": "#/definitions/material-level" },
          "tag": { "$ref": "#/definitions/tag-array" },
          "category": { "type": "string" },
          "spoken-language": { "$ref": "#/definitions/language" },
          "slide-language": { "$ref": "#/definitions/language" },
          "slide-subtitles": { "$ref": "#/definitions/language" },
          "slide-url": { "$ref": "#/definitions/url" },
          "video-url": { "$ref": "#/definitions/url" },
          "photo-permission": { "$ref": "#/definitions/binary-permission" },
          "video-permission": { "$ref": "#/definitions/binary-permission" },
          "has-interpretation": {
            "type": "boolean",
            "default": false
          },
          "status": { "$ref": "#/definitions/acceptance-status" },
          "sort-order": { "$ref": "#/definitions/positiveInteger" },
          "confirmed": {
            "type": "boolean",
            "default": false
          },
          "patternProperties": {
            "title#{a-z}+": { "$ref": "#/definitions/string-i18n" },
            "abstract#{a-z}+": { "$ref": "#/definitions/markdown-i18n" }
          }
        }
      },
      "targetSchema": { "$ref": "#/definitions/session" }
    },
    {
      "title": "Lookup session",
      "href": "/session/lookup",
      "rel": "lookup",
      "schema": {
        "required": ["id"],
        "properties": {
          "id": { "$ref": "#/definitions/uuid" }
        }
      },
      "targetSchema": { "$ref": "#/definitions/session" }
    },
    {
      "title": "List sessions by conference",
      "href": "/schedule/list",
      "rel": "list",
      "schema": {
        "type": "object",
        "required": ["conference_id"],
        "properties": {
          "date": { "$ref": "#/definitions/date-string" },
          "conference_id": { "$ref": "#/definitions/uuid" }
        }
      },
      "targetSchema": { "$ref": "#/definitions/session-array" }
    }
  ]
}