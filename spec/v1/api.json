        "category": { "type": "string" },
        "spoken_language": { "$ref": "#/definitions/language" },
        "slide_language": { "$ref": "#/definitions/language" },
        "slide_subtitles": { "$ref": "#/definitions/language" },
        "slide_url": { "$ref": "#/definitions/url" },
        "video_url": { "$ref": "#/definitions/url" },
